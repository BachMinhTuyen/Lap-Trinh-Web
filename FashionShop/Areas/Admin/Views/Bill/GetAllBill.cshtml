@model List<FashionShop.Models.HoaDon>
@{
    ViewBag.Title = "Tất cả hoá đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage_Admin.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản Lý <small>Hoá đơn</small></h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                <div class="input-group">
                    <form style="display: flex;" action="@Url.Action("GetAllBill", "Bill")" method="post">
                        <input type="text" name="txtInput_ID" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="submit">Go!</button>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Tất Cả Hoá Đơn</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <p>Bảng quản lý toàn bộ các hoá đơn đã được xuất - website thời trang - Fashion Shop</p>
                    @*<a href="@Url.Action("CreateProduct", "Bill")" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Create </a>*@
                    <!-- start project list -->
                    <table style="font-size: 15px;" class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 15%">Người Đặt Hàng</th>
                                <th style="width: 12%">Phí Vận Chuyển</th>
                                <th style="width: 12%">Tổng Tiền</th>
                                <th style="width: 12%">Ngày Đặt Hàng</th>
                                <th style="width: 12%">Phương Thức Vận Chuyển</th>
                                <th style="width: 12%">Phương Thức Thanh Toán</th>
                                <th style="width: 20%">#Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count != 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaHoaDon</td>
                                        <td>
                                            @item.TaiKhoan.UserName - @item.TaiKhoan.TenNguoiDung
                                        </td>
                                        <td>
                                            @string.Format("{0:#,###}đ", item.PhiVanChuyen)
                                        </td>
                                        <td>
                                            @item.TongTien
                                        </td>
                                        <td>
                                            @item.NgayDatMuaHang
                                        </td>
                                        <td>
                                            @item.PhuongThucVanChuyen
                                        </td>
                                        <td>
                                            @item.PhuongThucThanhToan
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Bill", new { maHoaDon = item.MaHoaDon})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            @*<a href="@Url.Action("DeleteBill", "Bill", new { maHoaDon = item.MaHoaDon})" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>*@
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">
                                        <h2 style="text-align: center;">Chưa có hoá đơn nào để thống kê</h2>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end project list -->
                </div>
            </div>
        </div>
    </div>
</div>

